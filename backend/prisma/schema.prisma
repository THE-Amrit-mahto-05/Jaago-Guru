generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  name       String
  email      String      @unique
  password   String
  createdAt  DateTime    @default(now())
  interviews Interview[]
  mcqs       MCQ[]
}

model Interview {
  id         Int    @id @default(autoincrement())
  userId     Int
  user       User      @relation(fields: [userId], references: [id])
  role       String
  experience String?
  totalQ     Int       @default(0)
  createdAt  DateTime  @default(now())
  endedAt    DateTime?
  questions  InterviewQuestion[]
}

model InterviewQuestion {
  id           Int   @id @default(autoincrement())
  interviewId  Int
  interview    Interview @relation(fields: [interviewId], references: [id])
  index        Int
  text         String
  userAnswer   String?
  score        Int?
  strengths    String?
  weaknesses   String?
  advice       String?
  createdAt    DateTime  @default(now())
}

model MCQ {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  subject     String
  topic       String
  question    String
  options     String   
  answer      String
  explanation String   
  createdAt   DateTime @default(now())
}
